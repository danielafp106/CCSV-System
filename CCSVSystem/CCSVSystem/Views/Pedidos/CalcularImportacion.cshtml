@model CCSVSystem.Models.Pedido


<div class="modal fade" tabindex="-1" id="CalcularImportacion" data-keyboard="false" data-bs-backdrop="static">
    <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5>Costos de Importación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body m-2">
                <div class="row">
                    <div class="">
                        <form action="@Url.Action("GuardarImportacion")">
                            <div asp-validation-summary="All" class="text-danger" hidden></div>
                            <div class="form-group">
                                <label asp-for="idPedido" class="control-label"></label>
                                <input asp-for="idPedido" class="form-control" disabled />
                                <span asp-validation-for="idPedido" class="text-danger"></span>
                            </div>                           
                            <div class="form-group">
                                <label asp-for="totalImportePedido" class="control-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input type="number" asp-for="totalImportePedido" class="form-control" />
                                </div>
                                <span asp-validation-for="totalImportePedido" class="text-danger"></span>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="submit" class="btn btn-success" data-save="modal" data-index="@Url.Action("Index")">Guardar Cambios</button>
            </div>

        </div>
    </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.js"></script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

